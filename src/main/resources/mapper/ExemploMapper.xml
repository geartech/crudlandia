<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.crudlandia.mappers.ExemploMapper">

	<select id="listagemExemplo" resultType="com.crudlandia.dtos.ExemploDTO">
        select * from exemplos
        where dthr_inicio <![CDATA[ >= ]]> #{dthrInicio}
        and dthr_fim <![CDATA[ <= ]]> #{dthrFim}
        
        <if test="nome != null">
            and status = #{nome}
        </if>
        
        <if test="status != null">
            and status = #{status}
        </if>
        
        <if test="columnType != null">
            order by ${columnType} ${orderType}
        </if>
            
    </select>
    
</mapper>